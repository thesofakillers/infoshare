#!/bin/bash

#SBATCH --partition=gpu
#SBATCH --gres=gpu:1
#SBATCH --job-name=LSWSD_Eval_Base
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=18
#SBATCH --time=00:30:00
#SBATCH --mem-per-gpu=32000M
#SBATCH --array=1-15%15
#SBATCH --output=lisa/outputs/eval_logs/lswsd/base_%A_%a.out

module purge
module load 2021
module load Anaconda3/2021.05

source activate bert-infoshare

CHECKPOINTS_FILE=./lisa/arrays/lswsd/all_checkpoints.txt
srun python -u infoshare/run/test.py --num_workers 3 --checkpoint \
                        $(head -$SLURM_ARRAY_TASK_ID $CHECKPOINTS_FILE | tail -1)
