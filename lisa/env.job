#!/bin/bash

#SBATCH --partition=gpu
#SBATCH --gres=gpu:1
#SBATCH --job-name=ENV
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=18
#SBATCH --time=00:30:00
#SBATCH --mem-per-gpu=32000M
#SBATCH --output=lisa/outputs/environment_install_%A.out

module purge
module load 2022
module load Anaconda3/2022.05

conda env remove -n bert-infoshare
conda create -n bert-infoshare python=3.8.13
source activate bert-infoshare
pip install -r requirements.txt
